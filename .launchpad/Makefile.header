lp.run.js                               =node --enable-source-maps $(1)
lp.run.ts                               =$(call lp.fn.if-equal, $(LP_CFG_MODULE_SYSTEM), esm, \
                                                                ts-node-esm, \
                                                                ts-node \
                                          ) $(1)
lp.run                                  =$(if $(filter %.ts,$(lastword $(strip $(1)))),\
                                              $(call lp.run.ts,$(1)),\
                                              $(call lp.run.js,$(1)) \
                                          )

