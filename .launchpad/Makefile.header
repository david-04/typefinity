lp.test.overwrite-after-hooks          =$(call lp.fn.var.assign, __LP_TEST_EFFECTIVE_AFTER_HOOKS, $(1))
lp.test.overwrite-command              =$(call lp.fn.assert.param-not-empty, lp.test.overwrite-command, $(1)) \
                                        $(call lp.fn.var.assign, __LP_TEST_EFFECTIVE_COMMAND, $(1))

lp.test.set-root-directories           =$(call lp.fn.assert.param-not-empty, set-root-directories, $(1)) \
                                        $(call lp.fn.var.assign, __LP_TEST_ROOT_DIRECTORIES, $(1))
