lp.test.overwrite-prerequisites        =$(call lp.fn.var.assign, __LP_TEST_EFFECTIVE_PREREQUISITES, $(1))
lp.test.add-before-hook                =$(call lp.fn.var.append-with-separator, __LP_TEST_EFFECTIVE_BEFORE_HOOKS, &&, $(1))
lp.test.overwrite-before-hooks         =$(call lp.fn.var.assign, __LP_TEST_EFFECTIVE_BEFORE_HOOKS, $(1))
