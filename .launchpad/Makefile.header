lp.test.get-after-hooks                =$(strip $(__LP_TEST_EFFECTIVE_AFTER_HOOKS))
lp.test.get-default-command            =$(if $(value 1), echo $(1) && )$(strip $(__LP_TEST_DEFAULT_COMMAND))
lp.test.get-effective-command          =$(strip $(__LP_TEST_EFFECTIVE_COMMAND))
lp.test.get-effective-command          =$(if $(strip $(__LP_TEST_EFFECTIVE_COMMAND)),$(strip $(__LP_TEST_EFFECTIVE_COMMAND)) && touch "$(__LP_TEST_TIMESTAMP_FILE)")
lp.test.get-command-with-hooks         =$(call lp.fn.get-command, test, $(if $(value 1), $(1)))

LP_PREREQUISITE_TEST                   =$$(call lp.test.get-targets)

