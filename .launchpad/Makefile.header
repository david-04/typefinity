lp.test.get-prerequisites              =$(__LP_TEST_EFFECTIVE_PREREQUISITES)
lp.test.get-default-targets            =$(__LP_TEST_DEFAULT_TARGETS)
lp.test.get-targets                    =$(__LP_TEST_EFFECTIVE_TARGETS)
lp.test.get-default-before-hook        =$(strip $(__LP_TEST_DEFAULT_BEFORE_HOOKS))
lp.test.get-before-hooks               =$(strip $(__LP_TEST_EFFECTIVE_BEFORE_HOOKS))
