$(call lp.diagnostics.disable                                   ) # disable diagnostics targets ("lp.*" remains active)

$(call lp.diagnostics.set-target-names, help info config        ) # set aliases for diagnostics targets

#-----------------------------------------------------------------------------------------------------------------------
#
#    ######   #######  ##     ## ########  #### ##       ########
#   ##    ## ##     ## ###   ### ##     ##  ##  ##       ##
#   ##       ##     ## #### #### ##     ##  ##  ##       ##
